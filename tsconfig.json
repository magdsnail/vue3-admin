{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "types": ["element-plus/global"]
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue", "components.d.ts", "types/*.d.ts"],
  "references": [{
    "path": "./tsconfig.node.json"
  }],
  "paths": {
    "@": [
      "src"
    ],
    "@/*": [
      "src/*"
    ],
    "@/utils/*": [
      "src/utils/*"
    ]
  }
}